                <input type="text" class="form-control mb-3" id="Alias" placeholder="Enter Alias...">
                <button type="button" id="Createbtn" class="btn btn-warning w-100">Create</button>
            </div>
        </div>

        <!-- Non-editable text field with copy button -->
        <div class="row justify-content-center mt-3 d-none" id="copyurl_div">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" id="copy_input" class="form-control" value="Shortner Url" readonly>
